{
  "name": "chatlalilulelo",
  "private": true,
  "version": "0.1.0",
  "description": "A codec-style entertainment companion for intellectual sparring",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n EDGE,MOBILE -c blue,green \"cd apps/edge && npx wrangler dev --local --env=development --port=8787\" \"cd apps/mobile && npx expo start --web --port=8082\"",
    "typecheck": "cd apps/mobile && npm run typecheck",
    "lint": "cd apps/mobile && npm run lint",
    "test": "cd apps/mobile && npm run test",
    "e2e": "cd apps/mobile && npm run e2e",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:edge": "cd edge/api && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
